<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/civilizationFragment"
        android:name="ru.fom.myapplessons.ui.screens.civilisations.CivilizationFragment"
        android:label="Список Цивилизаций"
        tools:layout="@layout/fragment_civilization" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.fom.myapplessons.ui.screens.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_civilizationFragment"
            app:destination="@id/civilizationFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/foodFragment"
        android:name="ru.fom.myapplessons.ui.screens.food.FoodFragment"
        android:label="Список блюд"
        tools:layout="@layout/fragment_food" />
</navigation>